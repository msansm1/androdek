<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:id="@+id/album_rear_left_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/red">

        <TextView
            android:text="@string/remove_from_collec"
            android:padding="16dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:gravity="start"
            android:textAllCaps="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/album_rear_right_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/red">

        <TextView
            android:text="@string/remove_from_collec"
            android:padding="16dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:gravity="end"
            android:textAllCaps="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/album_front_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/item_album_cover"
                android:scaleType="fitXY"
                android:layout_width="52dp"
                android:layout_height="52dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="14dp"
            android:paddingStart="16dp"
            android:layout_marginStart="48dp"
            android:gravity="start">

            <TextView
                android:id="@+id/item_album_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/item_album_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>